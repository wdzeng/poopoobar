{
  "compilerOptions": {
    // Environment and module options.
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "lib": [
      "ES2022",
      // Uncomment these to access document and fetch API.
      // "DOM",
      // "DOM.Iterable"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "alwaysStrict": true,

    "declaration": true,
    "outDir": "dist",
  },
  "include": ["src/**/*.ts"]
}
